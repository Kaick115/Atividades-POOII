package listafesta;

import java.util.ArrayList;

public class ListaFesta {
    private static ListaFesta instance = null;

    ArrayList<Pessoa> lista;

    private ListaFesta(){
        lista = new ArrayList<Pessoa>();
        lista.add(new Pessoa("Luís", 10));
        lista.add(new Pessoa("Maria", 20));
        lista.add(new Pessoa("Luís", 20));
    }

    public static ListaFesta getInstance() {
        if(instance == null) {
            instance = new ListaFesta();
        }
        return instance;
    }

    public void mostrarLista() {
        for(Pessoa p : lista) {
            p.mostrarInfo1();
            System.out.println("-------------------");
        }
    }
}
